# Ignore documentation and metadata files
*.md

# Ignore node_modules (it will be recreated during the build process)
node_modules/

# Ignore the .git directory (Git-related files)
.git/

# Ignore .gitignore file itself
.gitignore

# Ignore logs and debug files
*.log
*.tmp
debug_screenshot.png

# Ignore IDE-related files
.vscode/
.idea/

# Ignore test and coverage folders (if you have them)
test/
tests/
coverage/

# Ignore environment variables (if you use any .env file for local development)
.env

# Ignore system files
Thumbs.db
.DS_Store

# Ignore build artifacts or temporary files that aren't needed
build/
venv/

# Don't ignore important files like package.json and package-lock.json
!package.json
!package-lock.json

# Ignore Python and Node.js related metadata
*.pyc
*.pyo
*.pyd

# Ignore other common non-essentials
.vs/
.idea/
.vscode/

